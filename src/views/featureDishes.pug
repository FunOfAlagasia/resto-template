section
    div(class="featured-dishes")
        div(class="featured-dishes__top")
            div(class="featured-dishes__top__title")
                h3 Featured Dishes
            div(class="featured-dishes__top__dots")
                div(class="dots active")
                div(class="dots")
                div(class="dots")
        div(class="featured-dishes__cards")
            each dish in dishes
                div(class="featured-dishes__cards__item" draggable="true")
                    img(class="featured-dishes__cards__item__img" src=dish.image, alt="Dishes image" draggable="false" )
                    div(class="featured-dishes__cards__item__caption") 
                        span(class="featured-dishes__cards__item__caption__text")=dish.text 
                        span(class="featured-dishes__cards__item__caption__price")=dish.price
                    div(class="featured-dishes__cards__item__raiting")
                        - for(let i=0; i < dish.raiting; i++)
                            div(class="raiting-star active")